/* pages/look/look.wxss */

.body{
  width: 100%;
  background-color: #f8f7fa;
  padding-top: 91rpx;
}
.swiper-tab{    
  position: fixed;
  background-color: #fff;
  z-index: 9999;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
    width: 100%;    
    border-bottom: 1rpx solid #dfdfdf;    
    text-align: center;    
    line-height: 80rpx;
    }    
.swiper-tab-list{  font-size: 30rpx;    
    display: inline-block;    
    width: 20%;    
    color: #777777;    
}    
.on{ 
    color: #696969;    
    border-bottom: 5rpx solid #56a8fd;
    }    
.swiper-box{ 
  display: block;
   height: 100%; 
   width: 100%; 
   overflow: hidden;
   
    }    
.swp_item{
  width: 100%;
  height: 550rpx;
background-color: #fff;
margin-bottom: 15rpx;
}
.item_top{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.top_lft{
  width: 600rpx;
  display: flex;
  flex-direction: row;
}
.top_1{
  width: 70%;
}
.name{
font-weight: bold;
margin-left: 20rpx;
line-height: 75rpx;
height: 40rpx;
}
.name_1{
  margin-left: 20rpx;
  line-height: 70rpx;
}
.name_1 text{
  font-size: 24rpx;
  color: #7e7d7d;
}
.name text {
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
}
.usermotto {
  margin-top: 200px;
}
.userinfo-avatar {
  width: 75rpx;
  height: 75rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  border-radius: 50%;
  border: 4rpx solid white;
}
.top_2{
  margin-top: 35rpx;
  margin-right: 30rpx;
  text-align: center;
  width: 100rpx;
  height: 45rpx;
  border: 1px solid #ffba41;
  color: #ffba41;
  font-size: 24rpx;
  border-radius: 5rpx;
}
.item_mid{
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.item_mid image{
  width: 680rpx;
  height: 100%;
}
.item_title{
  font-size: 30rpx;
  color: #696969;
  line-height: 50rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.item_down{
  width: 690rpx;
  height: 65rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.itm_down1{
  font-size: 24rpx;
  color: #5da0fb;
  line-height: 60rpx;
}
.itm_down2{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.hide{
  display: none;
}