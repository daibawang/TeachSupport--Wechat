<!--pages/name/name.wxml-->
<view class='body'>
<form bindsubmit='formSubmit' >
  <view class='tar1'>
            <view class="weui-cells weui-cells_after-title">
            <view  class="weui-cell weui-cell_access" >
                <view class="weui-cell__bd">地址</view>
                <input class="weui-cell__ft weui-cell__ft_in-access" name='workaddr' value='{{adr}}'></input>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view  class="weui-cell weui-cell_access" >
                <view class="weui-cell__bd">家庭住址</view>
                <input class="weui-cell__ft weui-cell__ft_in-access"  name='homeaddr' value='{{home}}'>{{home}}</input>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view  class="weui-cell weui-cell_access" >
                <view class="weui-cell__bd">紧急联系人</view>
                <input class="weui-cell__ft weui-cell__ft_in-access" name='contact' value='{{pep}}'>{{pep}}</input>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view  class="weui-cell weui-cell_access" >
                <view class="weui-cell__bd">紧急联系人电话</view>
                <input class="weui-cell__ft weui-cell__ft_in-access" name='phone' value='{{num}}'>{{num}}</input>
            </view>
        </view>
  </view>  
  <view class='tar2'>
  <button formType='submit' style='background-color:#139AFF' ><text style='color:white'>保存</text></button>
  </view>    
   </form>                 
</view>